<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/large_margin"
    android:paddingBottom="@dimen/large_margin">


    <ImageView
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src = "@mipmap/ic_german_flag"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/italianWord"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="@dimen/large_margin"
        android:layout_marginEnd="@dimen/small_margin" />
    <TextView
        android:id="@+id/italianWord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/translatedWord"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="@dimen/large_margin"
        android:layout_marginEnd="@dimen/small_margin"

        tools:text="" />

    <ImageView
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src = "@mipmap/ic_italian_flag"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/italianWord"
        app:layout_constraintEnd_toStartOf="@id/translatedWord"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="@dimen/large_margin"
        android:layout_marginEnd="@dimen/small_margin" />

    <TextView
        android:id="@+id/translatedWord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/large_margin"
        android:layout_marginEnd="@dimen/small_margin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/starButton"
        app:layout_constraintStart_toEndOf="@id/italianWord"
        app:layout_constraintTop_toTopOf="parent"

        tools:text="" />

    <ImageButton
        android:id = "@+id/starButton"
        android:src="@drawable/empty_star_border_24"
        android:background="@color/white"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="@dimen/small_margin"
        android:layout_marginEnd="@dimen/small_margin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/translatedWord"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="remove from prefs"
        />


</androidx.constraintlayout.widget.ConstraintLayout>