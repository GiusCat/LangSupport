<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="@dimen/small_margin"
    android:layout_marginTop="@dimen/large_margin"
    android:layout_marginEnd="@dimen/small_margin"
    android:layout_marginBottom="@dimen/large_margin"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout

        android:id = "@+id/firstSectionMain"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHeight_percent="0.1">

        <EditText
            android:id = "@+id/InsertWordTranslate"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:hint="@string/insert_word_to_translate"

            app:layout_constraintLeft_toLeftOf="@id/firstSectionMain"
            app:layout_constraintBottom_toBottomOf="@id/firstSectionMain"
            app:layout_constraintTop_toTopOf="@id/firstSectionMain"
            android:layout_marginStart="@dimen/large_margin"/>

        <Button
            android:id= "@+id/translateButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@+id/InsertWordTranslate"
            app:layout_constraintRight_toRightOf="@+id/firstSectionMain"
            app:layout_constraintBottom_toBottomOf="@id/firstSectionMain"
            app:layout_constraintTop_toTopOf="@id/firstSectionMain"
            android:text="@string/translate"
            android:layout_marginEnd="@dimen/large_margin"
            android:layout_marginStart="@dimen/large_margin"
        />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout

        android:id = "@+id/secondSectionMain"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/firstSectionMain"
        app:layout_constraintHeight_percent="0.7">

        <ListView
            android:id="@+id/listViewLastWords"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/large_margin"
            android:layout_marginBottom="@dimen/small_margin"
            android:divider="@color/purple"
            android:dividerHeight="2dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

